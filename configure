#!/bin/sh

# easy makefile
echo '
.PHONY: all clean_all

all:
	make -C build all

clean_all:
	rm -rf build; rm Makefile

%: 
	make -C build $@
' > Makefile

# cleanup build dir if exist
rm -rf build

# create Unix Makefiles project
mkdir build && cd build && cmake ..

echo "\nYou can now run \"make && make test\"\n"
echo "\nNote that there is no \"install target\""
echo "\nRun \"make cargo_doc\" to generate the doc in the \"build/doc/\" directory.\n"

